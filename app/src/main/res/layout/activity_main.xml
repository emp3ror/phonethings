<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Click sim for options"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/btn_sim1"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Sim 1"
                        android:background="@drawable/simbackground"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/btn_sim2"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@drawable/simbackground"
                        android:layout_marginBottom="10dp"
                        android:text="sim 2"
                        android:gravity="center"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/location"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/location"
                    android:layout_gravity="bottom"/>
                </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/helpline"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/helpline"
                    android:layout_gravity="center"
                    android:onClick="helpline"/>
                <ImageView
                    android:id="@+id/btnSwitch"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_switch_off"
                    android:layout_marginLeft="10dp"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btnAccelerometer"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/accelerometer"/>
                <ImageView
                    android:id="@+id/btnBluetooth"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/bluetooth"
                    android:layout_marginLeft="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <fragment
        android:id="@+id/adFragment"
        android:name="phone.mjt.phonethings.MainActivity$AdFragment"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
